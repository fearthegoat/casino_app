<!DOCTYPE html>
<html>
<head>
  <title>SampleApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% [:notice, :alert].each do |level| %>
    <% if flash[level] %>
      <p>Errors</p>
      <% end %>
  <% end %>

<%= yield %>

</body>
</html>
